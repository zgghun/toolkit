<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!--MybatisGenerator 配置参考 https://blog.csdn.net/isea533/article/details/42102297-->
    <properties resource="application.properties"/>

    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="zgg.toolkit.core.mapper.BaseMapper"/>
        </plugin>

        <jdbcConnection driverClass="${spring.datasource.driver-class-name}"
                        connectionURL="${spring.datasource.url}"
                        userId="${spring.datasource.username}"
                        password="${spring.datasource.password}">
        </jdbcConnection>

        <javaModelGenerator targetPackage="zgg.toolkit.system.pojo.entity" targetProject="src/main/java"/>

        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources"/>

        <javaClientGenerator targetPackage="zgg.toolkit.system.mapper" targetProject="src/main/java"
                             type="XMLMAPPER"/>

        <table tableName="sys_permission" domainObjectName="Permission"></table>
        <table tableName="sys_role" domainObjectName="Role"></table>
        <table tableName="sys_user" domainObjectName="User"></table>
    </context>
</generatorConfiguration>