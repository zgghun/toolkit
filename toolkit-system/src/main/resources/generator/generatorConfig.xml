<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!--Mybatis Generator 配置参考 https://blog.csdn.net/isea533/article/details/42102297-->
    <!--Mybatis Generator对于生成的entity和*Mapper.java采取直接覆盖操作，所有不要在自动生成的文件里手动添加方法，-->
    <!--而生成的xml只会覆盖它自动生成的内容，用户添加的会保留-->
    <properties resource="application.properties"/>

    <context id="Mysql" targetRuntime="MyBatis3" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <commentGenerator>
            <!--保持 suppressAllComments 为默认即 false,这样才能保证*Mapper.xml中不会重复生成-->
            <!--<property name="suppressAllComments" value="true"/>-->
            <!--不在注释上生成时间-->
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="${spring.datasource.driver-class-name}"
                        connectionURL="${spring.datasource.url}"
                        userId="${spring.datasource.username}"
                        password="${spring.datasource.password}">
        </jdbcConnection>

        <javaTypeResolver>
            <!--http://www.mybatis.org/generator/configreference/javaTypeResolver.html-->
            <property name="forceBigDecimals" value="true"/>
            <!--MGB版本1.3.7及以上才支持java8 time-->
            <property name="useJSR310Types" value="true"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="zgg.toolkit.system.model.entity" targetProject="src/main/java">
            <property name="constructorBased" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources"/>

        <javaClientGenerator targetPackage="zgg.toolkit.system.mapper" targetProject="src/main/java"
                             type="XMLMAPPER"/>

        <table tableName="sys_permission" domainObjectName="Permission"></table>
        <table tableName="sys_role" domainObjectName="Role"></table>
        <table tableName="sys_user" domainObjectName="User">
            <columnOverride column="gender" javaType="zgg.toolkit.core.enums.GenderEnum"/>
            <columnOverride column="status" javaType="zgg.toolkit.core.enums.StatusEnum"/>
        </table>
    </context>
</generatorConfiguration>